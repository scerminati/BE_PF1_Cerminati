<div>
  <h1>Realtime Dashboard</h1>
  <p>Vista de Administrador.</p>
  <br />
  <button id="addProdbtn">Añadir un Producto</button>
  <div id="addProdForm">
    <h4 id="tituloHTML">Añadir un producto</h4>
    <br />
    <form id="productForm" enctype="multipart/form-data">
      <input type="hidden" id="productId" name="productId" />
      <p>
        <label for="title">Titulo*:</label>
        <input type="text" id="title" name="title" required />
      </p>
      <p>
        <label for="description">Descripción*:</label>
        <textarea
          type="text"
          id="description"
          name="description"
          class="inputDescr"
          required
        ></textarea>
      </p>
      <p>
        <label for="code">Código*:</label>
        <input type="number" min="1" id="code" name="code" required />
      </p>
      <p>
        <label for="price">Precio*:</label>
        <input
          type="number"
          step="0.01"
          min="1"
          id="price"
          name="price"
          required
        />
      </p>
      <p>
        <label for="stock">Stock*:</label>
        <input type="number" min="0" id="stock" name="stock" required />
      </p>
      <p>
        <label for="category">Categoría*:</label>
        <input type="text" id="category" name="category" required />
      </p>
      <p>
        <label for="thumbnail">Imagen:</label>
        <input type="file" id="thumbnail" name="thumbnail" accept="image/*" />
      </p>
      <div class="flexDiv">
        <div class="thumbnailPrev">
          <img
            id="thumbnailPreview"
            src="./images/no-image.jpg"
            alt="Thumbnail Preview"
            class="imgthumb"
          /></div>

        <button type="submit" id="submitBtn">Enviar</button>
        <button type="reset" id="resetBtn">Resetear</button></div>
    </form>
    <p>*Los campos son obligatorios para añadir o modificar un producto.</p>
    <button id="cancel">Cancelar Operación</button>
  </div><br />
  <h2>Listado de Productos</h2>
  <div class="listado"><div id="listado">
      {{#each products}}
        <div id="{{this.id}}" class="productoBox">
          <p class="flex0">ID: {{this.id}}</p>
          <p class="flex1">
            Producto:
            {{this.title}}</p>
          <p class="flex2"> Precio: ${{this.price}} </p>
          <p class="flex3">
            Stock:
            {{this.stock}}</p>
          <button
            type="button"
            class="btn-modify flex4"
            data-product-id="{{this.id}}"
          >Modificar</button>
          <button
            type="button"
            class="btn-delete flex5"
            data-product-id="{{this.id}}"
          >Eliminar</button>

        </div>
      {{/each}}
    </div></div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproducts.js"></script>